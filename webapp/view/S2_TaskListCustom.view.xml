									<columns>
										<!-- Columns must have unique IDs because table personalization service is used -->
										<!-- Task Title -->
										<Column demandPopin="true" hAlign="Begin" id="taskTitleColumn" width="{= !${device>/system/phone}? '22%' : '80%'}"
											popinDisplay="WithoutHeader">
											<header>
												<Label id="taskTitleLbl" text="{i18n>multi.summary.title}"/>
											</header>
										</Column>
										<!-- Status -->
										<Column demandPopin="true" hAlign="Center" id="statusColumn" minScreenWidth="Tablet" popinDisplay="WithoutHeader" visible="false">
											<header>
												<Label id="statusLbl" text="{i18n>group.status}"/>
											</header>
										</Column>
										<!-- Priority -->
										<Column demandPopin="true" hAlign="Begin" id="priorityColumn" minScreenWidth="Tablet" popinDisplay="WithoutHeader" visible="false">
											<header>
												<Label id="priorityLbl" text="{i18n>group.priority}"/>
											</header>
										</Column>
										<!-- Created By -->
										<Column demandPopin="true" hAlign="Begin" id="createdByColumn" minScreenWidth="Tablet" popinDisplay="WithoutHeader" visible="true">
											<header>
												<Label id="createdByLbl" text="{i18n>multi.summary.createdBy}"/>
											</header>
										</Column>
										<!-- On Behalf Of -->
										<Column demandPopin="true" hAlign="Begin" id="onBehalfOfColumn" minScreenWidth="Tablet" popinDisplay="Inline" visible="true">
											<header>
												<Label id="onBehalfOfLbl" text="{i18n>view.Workflow.Substituted}"/>
											</header>
										</Column>
										<!-- Confidence Level -->
<!-- 										<Column demandPopin="true" hAlign="Right" id="confidenceLevelColumn" minScreenWidth="Tablet" popinDisplay="Inline" visible="false">
