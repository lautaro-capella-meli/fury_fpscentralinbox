										</ColumnListItem>
									</items>
								</Table>
							</content>
						</IconTabBar>
					</VBox>
				</semantic:content>
				<!-- positive action, add the content in controller -->
				<semantic:positiveAction></semantic:positiveAction>
				<!-- negative action, add the content in controller -->
